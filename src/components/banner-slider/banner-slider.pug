mixin banner-slider

  - 
    var banners = [
      {
        text: 'Швейцарские очистители воздуха <br> с эффективностью свыше 99.97%',
        img: {
          origin: require('../../components/banner-slider/img/banner.png'),
          lg: require('../../components/banner-slider/img/banner-992.png')
        }
      },
      {
        text: 'Швейцарские очистители воздуха <br> с эффективностью свыше 99.97%',
        img: {
          origin: require('../../components/banner-slider/img/banner.png'),
          lg: require('../../components/banner-slider/img/banner-992.png')
        }
      },
      {
        text: 'Швейцарские очистители воздуха <br> с эффективностью свыше 99.97%',
        img: {
          origin: require('../../components/banner-slider/img/banner.png'),
          lg: require('../../components/banner-slider/img/banner-992.png')
        }
      }
    ]

  .banner-slider
    .banner-slider__list-wrap
      .banner-slider__btn-prev(data-btn-prev)
        include ./img/arrow.svg
      
      ul.banner-slider__list(data-container)
        each banner in banners
          li.banner-slider__list-item(data-items)
            .banner-slider__container-content
              p.banner-slider__content!= banner.text
            picture
              source(media=('(max-width: 992px)') srcset=`${banner.img.lg}`)
              img.banner-slider__img(src=`${banner.img.origin}`)
        
      .banner-slider__btn-next(data-btn-next)
        include ./img/arrow.svg

